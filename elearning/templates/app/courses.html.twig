{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Les cours{% endblock %}

{% block body %}

<h1>Les cours</h1>

<ul>
    {% for course in courses %}
        <li>
            <a href="{{ path('course', { slug: course.slug }) }}">{{ course.title }}</a> ({{ course.category.name }})
            <span class="float-right">
                <a class="edit" href="{{ path('edit_course', { slug: course.slug }) }}"><i class="fas fa-edit"></i></a>
                <a class="remove" href="{{ path('delete_course', { slug: course.slug }) }}"><i class="fas fa-trash"></i></a>
            </span>
        </li>
    {% endfor %}
</ul>

<a href="{{ path('add_course') }}" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Ajouter un cours</a>

{% endblock %}
